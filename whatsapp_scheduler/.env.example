# WhatsApp Scheduling Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# LLM Configuration
LLM_PROVIDER=openai
LLM_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4o-mini
LLM_BASE_URL=https://api.openai.com/v1

# Optional: Anthropic API key for fallback
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# WhatsApp Business API Configuration
WHATSAPP_API_KEY=your_whatsapp_business_api_key
WHATSAPP_PHONE_ID=your_whatsapp_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_WEBHOOK_TOKEN=your_webhook_verification_token
WHATSAPP_BASE_URL=https://graph.facebook.com/v18.0

# Google Calendar API Configuration
CALENDAR_API_KEY=your_google_calendar_api_key
CALENDAR_CREDENTIALS_PATH=credentials.json
CALENDAR_TOKEN_PATH=token.json
CALENDAR_ID=primary

# Database Configuration
DATABASE_URL=sqlite:///scheduler.db

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=true
DEFAULT_TIMEZONE=UTC
BUSINESS_HOURS_START=9
BUSINESS_HOURS_END=17

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=100